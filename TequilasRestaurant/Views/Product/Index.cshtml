@model IEnumerable<Product>

@{
    ViewBag.Title = "Tequilas Menu Items";
}

<h2>Tequilas Menu Items</h2>

<div class="row">
@foreach(Product prod in Model)
{
    <div class="col-md-4">
        <form asp-action="Delete" asp-controller="Product" method="post">
            <input type="hidden" asp-for="@prod.ProductId" name="id" />
            <div class="card" style="width: 18rem;">
                <img src="@Url.Content("~/images/" + prod?.ImageUrl)" class="card-img-top fixed-image-height" 
                alt="@prod.Description" />
            </div>
        </form>
    </div>
}
</div>